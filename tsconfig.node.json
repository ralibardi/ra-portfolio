{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@public/*": ["../public/*"],
      "@app/*": ["app/*"],
      "@routes/*": ["app/routes/*"],
      "@assets/*": ["assets/*"],
      "@contexts/*": ["contexts/*"],
      "@components/*": ["components/*"],
      "@config/*": ["config/*"],
      "@features/*": ["features/*"],
      "@hooks/*": ["hooks/*"],
      "@lib/*": ["lib/*"],
      "@pages/*": ["pages/*"],
      "@tests/*": ["tests/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["vite.config.ts", "./manifestGenerator.ts"]
}
