{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
      "subscriptionId": {
        "type": "String",
        "metadata": {
          "description": "The subscription ID where resources will be deployed."
        }
      },
      "resourceGroupName": {
        "type": "String",
        "metadata": {
          "description": "The name of the resource group for the deployment."
        }
      },
      "name": {
        "type": "String",
        "metadata": {
          "description": "The name of the web app."
        }
      },
      "location": {
        "type": "String",
        "metadata": {
          "description": "The location where resources will be deployed."
        }
      },
      "hostingPlanName": {
        "type": "String",
        "metadata": {
          "description": "The name of the App Service Plan."
        }
      },
      "serverFarmResourceGroup": {
        "type": "String",
        "metadata": {
          "description": "The resource group of the App Service Plan."
        }
      },
      "alwaysOn": {
        "type": "Bool",
        "metadata": {
          "description": "Indicates whether the app is always on."
        }
      },
      "ftpsState": {
        "type": "String",
        "metadata": {
          "description": "The state of FTP/S service."
        }
      },
      "sku": {
        "type": "String",
        "metadata": {
          "description": "The pricing tier of the App Service Plan."
        }
      },
      "skuCode": {
        "type": "String",
        "metadata": {
          "description": "The specific SKU code of the App Service Plan."
        }
      },
      "workerSize": {
        "type": "String",
        "metadata": {
          "description": "The size of the workers."
        }
      },
      "workerSizeId": {
        "type": "String",
        "metadata": {
          "description": "The ID for the worker size."
        }
      },
      "numberOfWorkers": {
        "type": "String",
        "metadata": {
          "description": "The number of workers for the app."
        }
      },
      "currentStack": {
        "type": "String",
        "metadata": {
          "description": "The current solution stack."
        }
      },
      "phpVersion": {
        "type": "String",
        "metadata": {
          "description": "The PHP version for the app."
        }
      },
      "nodeVersion": {
        "type": "String",
        "metadata": {
          "description": "The Node.js version for the app."
        }
      }
    },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-03-01",
      "name": "[parameters('name')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[concat('microsoft.insights/components/', parameters('resourceGroupName'))]",
        "[concat('Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]"
      ],
      "properties": {
        "name": "[parameters('name')]",
        "siteConfig": {
          "appSettings": [
            {
              "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
              "value": "[reference('microsoft.insights/components/ra-portfolio', '2015-05-01').ConnectionString]"
            },
            {
              "name": "ApplicationInsightsAgent_EXTENSION_VERSION",
              "value": "~2"
            },
            {
              "name": "XDT_MicrosoftApplicationInsights_Mode",
              "value": "default"
            },
            {
              "name": "XDT_MicrosoftApplicationInsights_NodeJS",
              "value": "1"
            },
            {
              "name": "WEBSITE_NODE_DEFAULT_VERSION",
              "value": "[parameters('nodeVersion')]"
            }
          ],
          "metadata": [
            {
              "name": "CURRENT_STACK",
              "value": "[parameters('currentStack')]"
            }
          ],
          "phpVersion": "[parameters('phpVersion')]",
          "nodeVersion": "[parameters('nodeVersion')]",
          "alwaysOn": "[parameters('alwaysOn')]",
          "ftpsState": "[parameters('ftpsState')]"
        },
        "serverFarmId": "[concat('/subscriptions/', parameters('subscriptionId'),'/resourcegroups/', parameters('serverFarmResourceGroup'), '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]",
        "clientAffinityEnabled": true,
        "virtualNetworkSubnetId": null,
        "httpsOnly": true,
        "publicNetworkAccess": "Enabled"
      },
      "resources": [
        {
          "type": "Microsoft.Web/sites/basicPublishingCredentialsPolicies",
          "apiVersion": "2022-09-01",
          "name": "[concat(parameters('name'), '/scm')]",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('name'))]"
          ],
          "properties": {
            "allow": false
          }
        },
        {
          "type": "Microsoft.Web/sites/basicPublishingCredentialsPolicies",
          "apiVersion": "2022-09-01",
          "name": "[concat(parameters('name'), '/ftp')]",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('name'))]"
          ],
          "properties": {
            "allow": false
          }
        }
      ]
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2020-12-01",
      "name": "[parameters('hostingPlanName')]",
      "location": "[parameters('location')]",
      "dependsOn": [],
      "sku": {
        "Tier": "[parameters('sku')]",
        "Name": "[parameters('skuCode')]"
      },
      "kind": "",
      "properties": {
        "name": "[parameters('hostingPlanName')]",
        "workerSize": "[parameters('workerSize')]",
        "workerSizeId": "[parameters('workerSizeId')]",
        "numberOfWorkers": "[parameters('numberOfWorkers')]",
        "zoneRedundant": false
      }
    },
    {
      "type": "microsoft.insights/components",
      "apiVersion": "2020-02-02-preview",
      "name": "ra-portfolio",
      "location": "ukwest",
      "dependsOn": ["newWorkspaceTemplate"],
      "properties": {
        "ApplicationId": "[parameters('name')]",
        "Request_Source": "rest",
        "Flow_Type": "Bluefield",
        "Application_Type": "web",
        "WorkspaceResourceId": "/subscriptions/91d20e1a-5da1-482d-8a04-327e49a543d3/resourceGroups/DefaultResourceGroup-WUK/providers/Microsoft.OperationalInsights/workspaces/DefaultWorkspace-91d20e1a-5da1-482d-8a04-327e49a543d3-WUK"
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "newWorkspaceTemplate",
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {},
          "variables": {},
          "resources": [
            {
              "apiVersion": "2020-08-01",
              "name": "DefaultWorkspace-91d20e1a-5da1-482d-8a04-327e49a543d3-WUK",
              "type": "Microsoft.OperationalInsights/workspaces",
              "location": "ukwest",
              "properties": {}
            }
          ]
    }
      },
      "subscriptionId": "[parameters('subscriptionId')]",
      "resourceGroup": "DefaultResourceGroup-WUK"
    }
  ]
}
