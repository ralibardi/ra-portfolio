{
  "sonarlint.connectedMode.project": {
    "connectionId": "ralibardi",
    "projectKey": "ralibardi_ra-portfolio"
  },
  "explorer.fileNesting": {
    "enabled": true,
    "patterns": {
      "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, .env",
      "manifestGenerator.*": "manifest.hbs",
      "vite.config.ts": "eslint.*, .gitignore, .prettierrc.*, .babelrc, .editorconfig, commitlint.*, sonar-project.*, web.*,.npmrc,chromatic.*",
      "index.html": "README.md",
      "jest.config.ts": "setupTests.ts",
      "*.{js,ts,jsx,tsx}": "${capture}.{js.map,min.js,d.ts,js,ts,jsx,tsx,stories.*,test.*,scss}"
    }
  },
  "editor": {
    "defaultFormatter": "esbenp.prettier-vscode",
    "formatOnSave": true,
    "formatOnType": true,
    "formatOnPaste": true,
    "codeActionsOnSave": {
      "source.fixAll": "never"
    }
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "git": {
    "autofetch": true,
    "enableSmartCommit": true
  },
  "files": {
    "autoSave": "onFocusChange",
    "eol": "\n"
  }
}
